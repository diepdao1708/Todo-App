<?xml version="1.0" encoding="utf-8"?>

<!--ghi chu Adapter-->

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="toDoData"
            type="com.android.diepdao1708.todo4.data.models.ToDoData" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:sendDataToUpdateFragment="@{toDoData}"
        android:background="@drawable/row_item_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:weightSum="45">
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_weight="25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{toDoData.todo_title}"
                android:layout_marginTop="16dp"
                android:textColor="@color/darkGray"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_loinhac"
                android:reminder="@{toDoData.todo_reminder}"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/textViewTime"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{toDoData.todo_time}"
                android:reminder="@{toDoData.todo_reminder}"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="@color/darkGray"
                android:background="@drawable/time_date_background"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/darkGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textViewDate"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{toDoData.todo_date}"
                android:reminder="@{toDoData.todo_reminder}"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="@color/darkGray"
                android:background="@drawable/time_date_background"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:maxLength="300"
            android:maxLines="10"
            android:text="@{toDoData.todo_description}"
            android:textColor="@color/darkGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>